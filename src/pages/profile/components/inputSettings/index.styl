.input-settings-field
    width: 100%
    position: relative

    &__input
        width: 100%
        padding: 0.77em 0
        border: 0
        outline: none
        border-radius: 0
        appearance: none
        font-size: 0.813rem
        line-height: 1
        font-weight: 500
        border-bottom: 1px solid #EAEAEA
        transition: border-color .3s
        text-align: right 
        color: #999999

        &:disabled
            background: none

        &::placeholder
            opacity: 0

        &:focus + .input-settings-field__placeholder
            color: #3369F3
            
    
    &__placeholder 
        display: block
        position: absolute
        left: 0
        top: 50%
        transform: translate3d(0, -50%, 0)
        font-size: 0.813rem
        line-height: 1
        font-weight: 500
        pointer-events: none
        transition-duration: 0.3s

