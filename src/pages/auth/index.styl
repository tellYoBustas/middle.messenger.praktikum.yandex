.auth-page
    height: 100vh

    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

    &__stage
        font-weight: 500
        font-size: 1.25rem
        line-height: 1

    &__form
        display: flex
        flex-direction: column
        align-items: center  

        width: 20rem
        min-height: 16.5rem
        padding: 0 1.25rem

        margin: 3.5rem 0 0.875rem

    &__input:not(:first-child)
        margin-top: 1.25rem

    &__input_last
        margin-bottom: 3.75rem

    &__button
        margin-top: auto
